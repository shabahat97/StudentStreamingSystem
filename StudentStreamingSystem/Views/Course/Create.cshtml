                            @Html.ValidationMessageFor(model => model.ClassType, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-2">
                            @Html.LabelFor(model => model.CourseType, htmlAttributes: new { @class = "control-label col-md-2", @style = "float: left;text-align: left;" })
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CourseType, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CourseType, "", new { @class = "text-danger" })
                        </div>
                    </div>
