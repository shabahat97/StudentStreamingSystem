                            @Html.LabelFor(model => model.Programme, htmlAttributes: new { @class = "control-label col-md-2", @style = "float: left;text-align: left;" })
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Programme, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Programme, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-2">
                            @Html.LabelFor(model => model.Campus, htmlAttributes: new { @class = "control-label col-md-2", @style = "float: left;text-align: left;" })
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Campus, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Campus, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row form-group">
