@model StudentStreamingSystem.Context.Course
@{
    ViewBag.Title = "Create";
}
<h2>Add Courses</h2>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div>
                @using (Html.BeginForm("Create", "Course", FormMethod.Post))
                {
                    <div class="row form-group">
                        <div class="col-md-2">
                            @Html.LabelFor(model => model.CourseNo, htmlAttributes: new { @class = "control-label col-md-2", @style = "float: left;text-align: left;" })
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CourseNo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CourseNo, "", new { @class = "text-danger" })
                        </div>

                    </div>

                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Room</label>
                        <div class="col-sm-7">
                            @Html.DropDownListFor(m => m.RoomId, (IEnumerable<SelectListItem>)ViewBag.roomname, "--Select Room--", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => Model.RoomId, "", new { @class = "text-danger" })


                        </div>

                    </div>
                    <div class="row form-group">
                        <div class="col-md-2">
                            @Html.LabelFor(model => model.CourseName, htmlAttributes: new { @class = "control-label col-md-2", @style = "float: left;text-align: left;" })
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CourseName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CourseName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row form-group">
