@using StudentStreamingSystem.MyClasses
@model StudentStreamingSystem.Context.Student
@{
    ViewBag.Title = "Login";
}
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4 table-bordered" style="margin-top:80px;padding:0px 50px 0px 50px">
            <h1 class="text-center">STUDENT</h1>
            <hr />
            <br />
            @using (Html.BeginForm("Login", "Student", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Your Email" })
                    @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(x => x.APNo, new { @class = "form-control", @placeholder = "Your APN No." })
                    @Html.ValidationMessageFor(x => x.APNo, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="text-danger">
                        @Html.GoogleCaptcha()
                        @Html.InvalidGoogleCaptchaLabel("Captcha is not valid !")
                        @ViewBag.ErrorMessage
                    </div>
                </div>
                        
                        <center>
                            <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-group-lg" style="width:300px">Log In</button>
                    </div>
                    <a href="@Url.Action("Index","Guest")">Login As Guest</a>
                </center>
                <br />
            }
        </div>
        <div class="col-md-4"></div>
    </div>
</div>





